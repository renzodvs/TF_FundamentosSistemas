        <Label Content="Trabajos" HorizontalAlignment="Left" Margin="108,210,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnEliminarPersona" Content="Eliminar" HorizontalAlignment="Left" Margin="735,78,0,0" VerticalAlignment="Top" Width="115" Height="31" Click="btnEliminar_Click"/>
        <Button x:Name="btnModificarPersona" Content="Modificar Persona" HorizontalAlignment="Left" Margin="345,358,0,0" VerticalAlignment="Top" Width="115" Height="31" Click="btnModifica_Click"/>
        <Button x:Name="btnModificarCv" Content="Modificar Cv" HorizontalAlignment="Left" VerticalAlignment="Top" Width="115" Margin="735,358,0,0" Click="btnModificarCv_Click" Height="31"/>

